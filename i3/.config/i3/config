bindsym $mod+Escape exec --no-startup-id powermenu_t1
# 系统监控（建议加上）
bindsym Control+Shift+Escape exec --no-startup-id ghostty -e btop
bindsym $mod+b exec --no-startup-id ghostty -e btop

# 浏览器（强烈建议加上，Chrome 和 Firefox 经常导致转圈）
bindsym $mod+Shift+G exec --no-startup-id google-chrome-stable
bindsym $mod+Shift+F exec --no-startup-id firefox

# 终端与编辑器
